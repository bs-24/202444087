#include <stdio.h>

int main(){

    int sum=0;
    for(int i=1;i<=100;i++){
        if(i%3 != 0){
            sum += i;
             ++sum;
        }
       
    }


    printf("%d",sum);


}////3의 배수의 합
#include <stdio.h>

int main(){

    int x,y;
    char op;
    scanf("%d %c %d",&x,&op,&y);

    switch (op)
    {
    case '+':
        printf("%d %c %d = %d",x,op,y,x+y);
        break;
    case '-':
        printf("%d %c %d = %d",x,op,y,x-y);
        break;
    case '*':
        printf("%d %c %d = %d",x,op,y,x*y);
        break;
    case '/':
        printf("%d %c %d = %d",x,op,y,x/y);
        break;
    default:
        break;
    }
    return 0;
} ///switch문
#include <stdio.h>

int main(){

    int n,sum=0;
    int i=1;
    scanf("%d",&n);
    while(1){
        
        if(i%2 == 0){
            sum +=i;
            
        }
    if(i == n){
        break;  
    }
    ++i;
    }
    printf("%d",sum);
}
