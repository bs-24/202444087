#include <stdio.h>
#include <stdlib.h>

int mani(void)
{
  system("title 정수형 데이터의 자릿수 지정 형식");

  printf("%d", 358);
  printf(": 정수형 기본 자릿수\n");

  printf("%5d", 358);
  printf(": 전체 자릿수 5개\n");

  printf("%05d", 358);
  printf(": 전체 자릿수는 5개이고 빈칸은 0으로 채움\n");

  printf("%f", 358.123456);
  printf("%.2f", 358.123456);
  printf("% 6.1f", 358.123456); ////6자리 소수1번째까지
  printf("% -6.1f", 358.123456);/////반대정렬
  printf("%7.3f", 358.123456);
  printf("%010.3f", 358.123456);
  return 0;
}
#include <stdio.h>
#include <stdlib.h>

int main()
{
  int a, b;
  printf("입력 값 : ");
  scanf("%d", &a); /////&입력주소
  printf("\n출력 값%d", a);

  printf("입력 값 :______\b\b\b\b\b\b");
  scanf("%d", &b);
  printf("\n 출력값 : %d", b);
}
#include <stdio.h>
#include <stdlib.h>

int main(void)
{
  int cnt;

  printf("알파벳 소문자가 출력됩니다.\n");

  for (cnt = 97; cnt <= 122; cnt++) /////아스킬 코드에 해당
    printf(" %c", cnt); /////문자출력

  return 0;
}
